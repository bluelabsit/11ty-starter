{% from 'macros/helpers.njk' import sprite %}
<!doctype html>
<html lang="it">
<head>
  <meta charset="utf-8">
  {% set title = title | default('ActionAid Landings') %}
  <title>{% block title %}{{ title }}{% endblock %}</title>
  <meta name="description" content="{% block description %}{{ description | default(title) }}{% endblock %}">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  {# CSS #}
  {% if env.ELEVENTY_ENV === "production" %}
    {% set link = "/css/" + csshash.indexCSS %}
    <link rel="preload" href="{{ link | url }}" as="style"/>
    <link rel="stylesheet" href="{{ link | url }}" type="text/css"/>
  {% else %}
    <link rel="stylesheet" href="{{ '/css/app.css' }}" type="text/css"/>
  {% endif %}
  <script defer src="https://unpkg.com/smoothscroll-polyfill@0.4.4/dist/smoothscroll.min.js"></script>
  {% include "shared/app-icons.njk" %}
  {% block head %}{% endblock %}
</head>
<body class="{{ bodyClass }}">

{% block content %}{% endblock %}

{% block javascript %}
<script src="/js/landing.js"></script>
<script src="/js/app.js"></script>
{% endblock %}

</body>
</html>
